{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../Library/ScriptAssemblies",
          "files": [
            "Assembly-CSharp.dll",
            "Assembly-CSharp.xml",
            "MoraMapGen.dll",
            "MoraMapGen.xml"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "templates/modern",
      "default"
    ],
    "globalMetadata": {
      "_appName": "MoraMapGen",
      "_appTitle": "MoraMapGen",
	  "_appLogoPath": "logo.svg",
      "_enableSearch": true,
      "pdf": true
    }
  }
}